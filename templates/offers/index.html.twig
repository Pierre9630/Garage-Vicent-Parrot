{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Annonces</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Titre Annonce</th>
                <th>Crée le </th>
                <th>Modifié le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr class="word-break-auto">
                <td>{{ offer.reference }}</td>
                <td>{{ offer.offerTitle }}</td>
                <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ offer.modifiedAt ? offer.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="d-flex justify-content-md-2 align-items-center">
                        <a href="{{ path('app_offers_show', {'id': offer.id}) }}" class="text-success"><i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('app_offers_edit', {'id': offer.id}) }}" class="text-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                        <div class="text-danger">{{ include('offers/_delete_form.html.twig') }}</div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'Annonces</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {%  if knp_pagination_render(offers) %}
        <label>Changer de Page : </label>{{ knp_pagination_render(offers)}}<br>
    {% endif %}
    <a href="{{ path('app_offers_new') }}"><i class="fa-solid fa-plus"></i></a>
{% endblock %}
