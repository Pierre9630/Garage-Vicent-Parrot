{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        {#  <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>#}
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}"><i class="fa-solid fa-arrow-left"></i></a>
    {% set AdminRole = "ROLE_ADMIN" %}
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>    

    {{ include('user/_delete_form.html.twig', {'button_label': 'Supprimer'}) }}
    {% endif %}
{% endblock %}
