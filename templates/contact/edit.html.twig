{% extends 'base.html.twig' %}

{% block title %}Edit Contact{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Edit Contact</h1>

    {{ include('contact/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_contact_index') }}"><i class="fa-solid fa-arrow-left"></i></a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let generalInquiryCheckbox = document.getElementById('{{ form.vars.id }}_isGeneralInquiry');
            let offerField = document.querySelector('.offer-field');

            // Décocher la case par défaut
            generalInquiryCheckbox.checked = false;

            generalInquiryCheckbox.addEventListener('change', function () {
                offerField.disabled = generalInquiryCheckbox.checked;

            });
            console.log(offerField.enabled);
            offerField.disabled = generalInquiryCheckbox.checked;
        });
    </script>
{% endblock %}
