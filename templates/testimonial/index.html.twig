{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Avis</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Prénom</th>
                <th>Note</th>
                <th>Message</th>
                <th>Approuvé</th>
                <th>Crée le </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for testimonial in testimonials %}
            <tr class="word-break-auto">

                <td>{{ testimonial.name }}</td>
                <td>{{ testimonial.lastname }}</td>
                <td>{{ testimonial.note }}</td>
                <td>{{ testimonial.message }}</td>
                <td>{% if testimonial.isApproved is same as true %}Oui{% else %} Non{% endif %}</td>
                <td>{{ testimonial.createdAt ? testimonial.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_testimonial_show', {'id': testimonial.id}) }}"><button aria-label="Voir"><i class="fa-solid fa-eye" aria-hidden="false"></i></button></a>
                    <a href="{{ path('app_testimonial_edit', {'id': testimonial.id}) }}"><i class="fa-solid fa-pen-to-square" aria-hidden="false"></i><span class="sr-only">Modifier</span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas d'avis</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_testimonial_new') }}"><i class="fa-solid fa-plus" aria-hidden="false"></i><span class="sr-only">Nouveau</span></a>
{% endblock %}

